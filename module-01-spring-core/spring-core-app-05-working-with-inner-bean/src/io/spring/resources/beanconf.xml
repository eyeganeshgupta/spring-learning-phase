<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- ðŸ“Œ We must remember 5 important points when dealing with inner beans: -->
        <!-- 1ï¸âƒ£ When a bean does not need to be shared with other beans, then it can be declared as an inner bean. -->
        <!-- 2ï¸âƒ£ An inner bean cannot be injected into any other bean except for the enclosing bean. -->
        <!-- 3ï¸âƒ£ An inner bean is defined within the context of its enclosing bean. -->
        <!-- 4ï¸âƒ£ Inner bean typically does not has an id associated with it although it is perfectly legal to provide an id. -->
        <!-- 5ï¸âƒ£ This is because, by its very definition, an inner bean will not be shared outside of its enclosing bean so the value of the id/name attribute of an inner bean is ignored by Spring. -->

    <!-- Definition of the AccountHolder bean with name "accountHolderObj01" -->
    <bean class="io.spring.beans.AccountHolder" name="accountHolderObj01">
        <property name="name" value="Sai Siddhi Traders" />
        <property name="account">
            <!-- Definition of the Account InnerBean -->
            <bean class="io.spring.beans.Account">
                <property name="accountNumber" value="59298620000732" />
                <property name="balance" value="1733" />
                <property name="accountType" value="Current Account" />
            </bean>
        </property>
        <property name="address" value="Shop no. 08 Sai Siddhi Traders, Valai Pada Road, Palghar - 401209" />
        <property name="email" value="eyeganeshgupta@gmail.com" />
        <property name="phoneNumber" value="+91 89X39 XX7XX" />
    </bean>

    <!-- Definition of the AccountHolder bean with name "accountHolderObj02" -->
