<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util" xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <bean class="io.spring.beans.Student" id="studentObj">
        <property name="studentId" value="12" />
        <property name="name" value="Ganesh Gupta" />
        <property name="age" value="21" />
        <property name="grade" value="T.Y.B.Sc.CS" />
        <property name="subjects">
            <list>
                <value>Data Science</value>
                <value>Cloud Computing and Web Services</value>
                <value>Wireless and Sensor Networks</value>
                <value>Data Mining and Warehousing</value>
                <value>Cyber Laws and IPR</value>
            </list>
        </property>
        <!-- ðŸ”¥ Working with util Schema ðŸ”¥ -->
        <property name="marks">
            <!--
            <bean class="org.springframework.beans.factory.config.ListFactoryBean">
                <property name="targetListClass">
                    <value>java.util.LinkedList</value>
                </property>
                <property name="sourceList">
                    <list>
                        <value>55</value>
                        <value>61</value>
                        <value>40</value>
                        <value>59</value>
                        <value>72</value>
                    </list>
                </property>
            </bean>
            -->

            <!-- ðŸ‘‰ Using the class ListFactoryBean solves the problem but requires some extra tags and makes the code a bit difficult. -->
            <!-- ðŸ‘‰ As an easy alternate to this Spring provides util schema and tags. -->
            <!-- ðŸ‘‰ As the name implies, the util tags deal with common, utility configuration issues, such as configuring collections. -->
            <util:list id="marks" list-class="java.util.LinkedList">
                <value>55</value>
                <value>61</value>
                <value>40</value>
                <value>59</value>
                <value>72</value>
            </util:list>
        </property>

    </bean>

</beans>