<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- ðŸ“Œ Bean Scopes ðŸ“Œ -->
    <!-- â­ Bean Scope is an important part of the bean creation and it helps the Spring container to decide: -->
        <!-- 1ï¸âƒ£ When the object of Bean will be instantiated? -->
        <!-- 2ï¸âƒ£ How long that object will live? -->
        <!-- 3ï¸âƒ£ How many objects will be created for that bean throughout? -->

    <!-- ðŸ“Œ Total Bean Scopes ðŸ“Œ -->
    <!-- â­ Bean Scope Spring allows us to set 8 scopes for our bean object and they are: -->
        <!-- 1ï¸âƒ£ singleton -->
        <!-- 2ï¸âƒ£ prototype -->
        <!-- 3ï¸âƒ£ request -->
        <!-- 4ï¸âƒ£ session -->
        <!-- 5ï¸âƒ£ global-session -->
        <!-- 6ï¸âƒ£ application -->
        <!-- 7ï¸âƒ£ websocket -->
        <!-- 8ï¸âƒ£ custom -->


    <!-- ðŸ“Œ Singleton Scope ðŸ“Œ -->
    <!-- âš¡ When we define a bean with the singleton scope then: -->
        <!-- 1ï¸âƒ£ The container creates a single instance of that bean. -->
        <!-- 2ï¸âƒ£ It means that all requests for that bean using getBean(...) will return the same object, which is cached. -->

    <!-- ðŸ’Ž Two more points about singleton bean -->
        <!-- 1ï¸âƒ£ This scope is the default value if no other scope is specified. -->
        <!-- 2ï¸âƒ£ Any modification to the object will be reflected in all references to the bean. -->


    <!-- ðŸš€ Explicitly specifying singleton ðŸš€ -->
    <bean class="io.spring.beans.Programmer" name="programmerObj01" scope="singleton">
        <property name="name" value="Ganesh Gupta" />
        <property name="language" value="Java" />
        <property name="experience" value="3" />
        <property name="favoriteEditor" value="IntelliJ IDEA" />
        <property name="projectsCompleted" value="6" />
        <property name="githubProfile" value="https://github.com/eyeganeshgupta" />
    </bean>

    <!-- ðŸš€ Implicit singleton ðŸš€ -->
