<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- ðŸ“Œ Autowiring -->
        <!-- ðŸ‘‰ Autowiring is a mechanism in Spring that allows the framework to automatically detect and inject the dependent beans to the properties of target bean without the need for explicit configuration. -->
        <!-- ðŸ‘‰ In simple words, when we apply autowiring, then Spring looks for the dependent beans in the container and automatically injects them into the target object. -->

    <!-- Benefit -->
        <!-- ðŸ‘‰ This can save a lot of time and effort, especially in large-scale applications where there are a large number of dependencies between objects. -->

    <!-- Drawback -->
        <!-- ðŸ‘‰ No control of the programmer. -->
        <!-- ðŸ‘‰ It can't be used for primitive and not recommended for String values. -->

    <bean class="io.spring.beans.Account" id="account">
        <property name="accountNumber" value="0662104000164641" />
        <property name="accountType" value="Savings" />
        <property name="balance" value="24802.33" />
    </bean>

    <!-- Here autowire=â€œnoâ€ is set by default -->
    <bean class="io.spring.beans.Customer" id="customerObj">
        <property name="customerId" value="C001" />
        <property name="name" value="Ganesh" />
        <property name="email" value="eyeganeshgupta@gmail.com" />
        <property name="phoneNumber" value="89839 71752" />
        <!-- <property name="account" value="" /> -->
    </bean>

</beans>